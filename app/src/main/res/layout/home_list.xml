<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:cardview="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linear">

    <android.support.v7.widget.CardView
        android:id="@+id/cardview_home"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        cardview:cardElevation="3dp"
        cardview:cardCornerRadius="5dp"
        android:outlineAmbientShadowColor="@color/cardview_shadow"
        android:layout_marginLeft="@dimen/home_margin_left"
        android:layout_marginTop="@dimen/home_margin_top"
        android:layout_marginRight="@dimen/home_margin_right"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_home_list"
                android:layout_width="@dimen/home_image_width"
                android:layout_height="@dimen/home_image_height"
                android:scaleType="centerCrop"
                />

            <TextView
                android:id="@+id/tv_home_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/title_padding"
                android:paddingRight="@dimen/title_padding"
                android:paddingTop="@dimen/title_padding"
                android:textSize="@dimen/title_text_size"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_gravity="center"/>


        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>